<% include partials/header.ejs %>


<form class="ui form" action="/blog/<%= blog._id %>?_method=PUT" method="POST">
  <div class="field">
    <label>Post title</label>
    <input type="text" name="blog[title]" value="<%= blog.title %>">
  </div>
  <div class="field">
    <label>Image URL</label>
    <input type="text" name="blog[image]" value="<%= blog.image %>">
  </div>
  <div class="field">
    <label>Post content</label>
    <textarea name="blog[body]" placeholder="Post content"><%= blog.body %></textarea>
  </div>
  <button class="ui blue button">Save</button>
</form>


